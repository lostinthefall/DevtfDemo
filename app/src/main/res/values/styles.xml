    <style name="AppTheme" parent="@style/AppBaseTheme" />

    <style name="toolbar.style" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

</resources>
